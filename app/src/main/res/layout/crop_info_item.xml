<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="28dp"
            android:text="Crop Season"

            android:textStyle="bold"
            android:id="@+id/tv_cropSeason"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="370dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="7dp"
            android:id="@+id/sp_cropSeason"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="28dp"
            android:text="Crop Name"

            android:textStyle="bold"
            android:id="@+id/tv_cropName"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="370dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="7dp"
            android:id="@+id/sp_cropName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="28dp"
            android:text="Crop Production Of Previous Season"

            android:textStyle="bold"
            android:id="@+id/tv_cropProduction"
            />

        <EditText
            android:layout_width="370dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="7dp"
            android:id="@+id/et_cropProduction"
            />

</LinearLayout>